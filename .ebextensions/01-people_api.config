container_commands:
  01_migrate:
    command: "django-admin.py migrate"
    leader_only: true

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "people_api.settings"
    "PYTHONPATH": "/opt/python/current/app/people_api:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: people_api/people_api/wsgi.py
    NumProcesses: 3
    NumThreads: 20
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "www/static/"
